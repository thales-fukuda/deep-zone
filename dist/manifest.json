{
  "name": "Deep Zone",
  "author": "thalesfukuda",
  "version": "1.0.0",
  "description": "Deep Zone helps you to focus and do stuff.",
  "icons": {},
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "activeTab",
    "alarms",
    "bookmarks",
    "cookies",
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Web Extension Starter",
    "default_icon": "assets/icon-48.png",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "js": ["counter.js"],
      "matches": ["*://*/*"]
    }
  ]
}
