{
  "name": "Deep Zone",
  "author": "thalesfukuda",
  "version": "1.0.0",
  "description": "Deep Zone helps you to focus and do stuff.",
  "icons": {
    "128": "assets/icon-128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "*://*/*"
  ],
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Deep Zone",
    "default_icon": "assets/icon-128.png",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
